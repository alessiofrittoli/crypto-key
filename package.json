{
	"name": "@alessiofrittoli/crypto-key",
	"version": "0.1.0",
	"description": "Lightweight TypeScript library for Node.js Cryptographic keys",
	"author": {
		"name": "Alessio Frittoli",
		"email": "info@alessiofrittoli.it",
		"url": "https://alessiofrittoli.it"
	},
	"license": "MIT",
	"keywords": [
		"nodejs",
		"crypto",
		"keys",
		"crypto-keys"
	],
	"homepage": "https://github.com/alessiofrittoli/crypto-key#readme",
	"bugs": {
		"url": "https://github.com/alessiofrittoli/crypto-key/issues",
		"email": "info@alessiofrittoli.it"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alessiofrittoli/crypto-key.git"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./Hmac": {
			"types": "./dist/Hmac.d.ts",
			"import": "./dist/Hmac.mjs",
			"require": "./dist/Hmac.js"
		},
		"./Scrypt": {
			"types": "./dist/Scrypt.d.ts",
			"import": "./dist/Scrypt.mjs",
			"require": "./dist/Scrypt.js"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "eslint && pnpm test:ci && tsup",
		"lint": "eslint",
		"test": "jest --watchAll --verbose",
		"test:ci": "jest --ci --verbose",
		"test:jest": "pnpm test jest.test.ts",
		"test:jest:jsdom": "JSDOM=true pnpm test:jest",
		"test:hmac": "pnpm test hmac.test.ts",
		"test:scrypt": "pnpm test scrypt.test.ts"
	},
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.1",
		"dotenv": "^16.4.7",
		"eslint": "^9.16.0",
		"globals": "^15.13.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0"
	},
	"dependencies": {
		"@alessiofrittoli/crypto-algorithm": "^1.2.0",
		"@alessiofrittoli/crypto-buffer": "^2.0.1"
	}
}
